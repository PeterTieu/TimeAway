<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--RecyclerView-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/time_between_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <!--Blank TimeBetweens Screen-->
    <LinearLayout
        android:id="@+id/no_time_between_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!--TextView: "You have no Time Betweens"-->
        <TextView
            android:id="@+id/you_have_no_time_betweens"
            android:text="@string/you_have_no_time_betweens"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--Add New TimeBetween Button-->
        <Button
            android:id="@+id/add_new_time_between"
            android:text="@string/add_new_time_between"
            android:textColor="@color/add_new_time_between_font_color"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>





</LinearLayout>