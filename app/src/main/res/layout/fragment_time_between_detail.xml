<?xml version="1.0" encoding="utf-8"?>

<!--Layout for TimeBetwenDetailFragment-->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/time_between_detail_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/time_between_detail_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <!--Title of Time Between-->
        <EditText
            android:id="@+id/time_between_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="@string/time_between_title"
            android:inputType="textCapWords|textMultiLine"
            android:textSize="23dp"
            android:textStyle="bold"/>


        <!--UUID of the TimeBetween-->
        <TextView
            android:id="@+id/time_between_detail_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




        <!--Text: "First Point"-->
        <TextView
            android:text="@string/first_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <!--Text: "Date"-->
                <TextView
                    android:text="@string/date"
                    android:layout_marginTop="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!--Text: "Time"-->
                <TextView
                    android:text="@string/time"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">


                <Button
                    android:id="@+id/time_between_first_date_button"
                    android:text="@string/add_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <Button
                    android:id="@+id/time_between_first_time_button"
                    android:text="@string/add_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </LinearLayout>

        </LinearLayout>




        <View style="@style/dividerHorizontal"/>



        <!--Text: "Second Point"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_point"
            android:textSize="18dp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <!--Text: "Date"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="@string/date"/>

                <!--Text: "Time"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="@string/time"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <Button
                    android:id="@+id/time_between_second_date_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/add_date"/>

                <Button
                    android:id="@+id/time_between_second_time_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/add_time"/>

            </LinearLayout>


        </LinearLayout>




        <!--Text: "Difference"-->
        <TextView
            android:text="@string/difference"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>



        <View style="@style/dividerHorizontal"/>


        <!--Time Difference-->
        <TextView
            android:id="@+id/time_between_time_difference_text"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>














    </LinearLayout>


</ScrollView>